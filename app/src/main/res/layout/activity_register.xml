<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:baselineAligned="false"
    android:background="@drawable/background_new">


    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.v7.widget.CardView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_account_circle_black_24dp"
                        android:id="@+id/imageView2"
                        android:layout_weight="10" />

                    <EditText
                        android:layout_weight="90"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/fName"
                        android:enabled="true"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:layout_gravity="center_horizontal"
                        android:hint="First Name"
                        android:textStyle="normal"
                        android:textColor="#000"
                        android:textColorHint="#66000000"
                        android:textSize="@dimen/abc_text_size_large_material"
                        tools:backgroundTint="@color/colorPrimaryDark"
                        android:singleLine="true"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@id/ll"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_account_circle_black_24dp"
                        android:layout_weight="10"
                        android:id="@+id/imageView3" />


                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/lName"
                        android:layout_weight="90"
                        android:layout_marginBottom="10dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:hint="Last Name"
                        android:textColor="#000"
                        android:textColorHint="#66000000"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="normal"
                        android:textSize="@dimen/abc_text_size_large_material"
                        tools:backgroundTint="@color/colorPrimaryDark"
                        android:singleLine="true"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@id/ll2"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_android_black_24dp"
                        android:layout_weight="10"
                         />


                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/uName"
                        android:layout_weight="90"
                        android:layout_marginBottom="10dp"
                        android:lines="1"
                        android:maxLines="1"
                        android:hint="Email"
                        android:textColor="#000"
                        android:textColorHint="#66000000"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="normal"
                        android:textSize="@dimen/abc_text_size_large_material"
                        tools:backgroundTint="@color/colorPrimaryDark"
                        android:singleLine="true"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll4"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@id/ll3"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_fingerprint_black_24dp"
                        android:layout_weight="10"
                        />


                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/pWord"
                        android:layout_weight="90"
                        android:layout_marginBottom="10dp"
                        android:password="true"
                        android:lines="1"
                        android:maxLines="1"
                        android:hint="Password"
                        android:textColor="#000"
                        android:textColorHint="#66000000"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="normal"
                        android:textSize="@dimen/abc_text_size_large_material"
                        tools:backgroundTint="@color/colorPrimaryDark"
                        android:singleLine="true"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll5"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="100"
                    android:layout_below="@id/ll4"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_fingerprint_black_24dp"
                        android:layout_weight="10"
                        />


                    <EditText
                        android:lines="1"
                        android:maxLines="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/rpWord"
                        android:layout_weight="90"
                        android:layout_marginBottom="10dp"
                        android:password="true"
                        android:hint="Repeat Password"
                        android:textColor="#000"
                        android:textColorHint="#66000000"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="normal"
                        android:textSize="@dimen/abc_text_size_large_material"
                        tools:backgroundTint="@color/colorPrimaryDark"
                        android:singleLine="true"
                        android:fontFamily="sans-serif" />
                </LinearLayout>



                <ImageButton

                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="35dp"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/add_new_user"
                    android:id="@+id/register"
                    android:layout_below="@id/ll5"

                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton

                    app:srcCompat="@drawable/ic_lock_black_24dp"
                    android:layout_height="35dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_width="35dp"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:id="@+id/login"
                    android:elevation="4dp"
                    android:cropToPadding="false"
                    android:layout_below="@+id/ll5"
                    android:layout_alignLeft="@+id/ll5"
                    android:layout_alignStart="@+id/ll5" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="90dp"
            app:civ_shadow="true"
            android:layout_height="90dp"
            android:src="@drawable/anonymous_icon"
            android:elevation="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/propic"
            android:adjustViewBounds="false" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/add_new_user"
            android:id="@+id/add_propic"
            app:elevation="11dp"
            android:layout_alignBottom="@+id/propic"
            android:layout_alignEnd="@+id/propic"
            android:layout_marginBottom="11dp"
            app:backgroundTint="@android:color/holo_orange_light" />
    </RelativeLayout>


</RelativeLayout>
